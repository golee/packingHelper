<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.hci.packinghelper.InsertActivity">
    <LinearLayout
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/popup_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="center">
            <EditText
                android:id="@+id/editTextItemName"
                android:background="@drawable/edittext_background"
                android:hint="Item name"
                android:paddingLeft="10sp"
                android:layout_width="210sp"
                android:layout_height="50sp"
                android:textSize="30sp"
                android:layout_margin="10sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="1sp"
            android:background="@android:color/background_dark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/buttonDay0"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="월"/>
                <Button
                    android:id="@+id/buttonDay1"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="화"/>
                <Button
                    android:id="@+id/buttonDay2"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="수"/>
                <Button
                    android:id="@+id/buttonDay3"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="목"/>
                <Button
                    android:id="@+id/buttonDay4"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="금"/>
                <Button
                    android:id="@+id/buttonDay5"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="토"/>
                <Button
                    android:id="@+id/buttonDay6"
                    android:background="@drawable/dayoftheweek"
                    android:padding="6sp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="일"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/checkboxEveryday"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:textSize="18sp"
                android:text="Everyday"/>
            <CheckBox
                android:id="@+id/checkboxWeekdays"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:textSize="18sp"
                android:text="Weekdays"/>
            <CheckBox
                android:id="@+id/checkboxWeekend"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:textSize="18sp"
                android:text="Weekend"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="1sp"
            android:background="@android:color/background_dark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/button_selected">
                <ImageView
                    android:id="@+id/imageViewIconPreview"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@android:drawable/ic_menu_search"/>
            </RelativeLayout>
            <Spinner
                android:id="@+id/spinnerIconSelect"
                android:background="@drawable/edittext_background"
                android:padding="4sp"
                android:layout_margin="20sp"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/spinnerItems">
                </Spinner>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="1sp"
            android:background="@android:color/background_dark"
            />
        <Button
            android:id="@+id/buttonAdd"
            android:background="@drawable/button_selector"
            android:text="Add"
            android:layout_margin="20sp"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="100sp"
            android:layout_height="60sp" />
    </LinearLayout>
</RelativeLayout>
